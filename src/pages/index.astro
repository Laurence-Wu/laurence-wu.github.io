---
// Home Page - Book Theme
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
).slice(0, 5); // Latest 5 posts
---

<BaseLayout title="Xiaoyou Wu - Engineering & Research">
  <div class="container home-container">
    <section class="intro">
      <h1 class="intro-title">Xiaoyou Wu</h1>
      <p class="intro-subtitle">Computer Engineering Student at Georgia Tech</p>
      
      <div class="intro-text">
        <p>
          I explore the intersection of <strong>hardware and software</strong>. My work focuses on machine learning optimization, avionics systems, and embedded engineering.
        </p>
        <p>
          This space documents my research notes, engineering projects, and technical explorations.
        </p>
      </div>

      <div class="intro-links">
        <a href="/projects">Projects</a>
        <span class="separator">•</span>
        <a href="/blog">Blog</a>
        <span class="separator">•</span>
        <a href={`${import.meta.env.BASE_URL}resume.pdf`}>Resume</a>
      </div>
    </section>

    <section class="recent-writing">
      <h2>Recent Writing</h2>
      <ul class="post-list">
        {posts.map((post) => (
          <li>
            <a href={`/blog/${post.slug}/`}>
              <span class="post-date">{post.data.pubDate.toISOString().split('T')[0]}</span>
              <span class="post-title">{post.data.title}</span>
            </a>
          </li>
        ))}
      </ul>
      <div class="more-link">
        <a href="/blog">View Archive →</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .home-container {
    padding-top: 2rem;
  }

  .intro {
    text-align: center;
    margin-bottom: 5rem;
  }

  .intro-title {
    font-size: 3.5rem;
    margin-bottom: 0.5rem;
    letter-spacing: -1px;
    font-weight: 700;
  }

  .intro-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    font-family: var(--font-sans);
    margin-bottom: 2rem;
  }

  .intro-text {
    max-width: 600px;
    margin: 0 auto 2rem;
    font-size: 1.15rem;
    color: var(--text-primary);
  }

  .intro-links {
    font-family: var(--font-sans);
    font-size: 1.1rem;
  }

  .separator {
    margin: 0 0.5rem;
    color: var(--border-subtle);
  }

  .recent-writing {
    max-width: 650px;
    margin: 0 auto;
  }

  .recent-writing h2 {
    font-size: 1.4rem;
    border-bottom: 2px solid var(--text-primary);
    padding-bottom: 0.5rem;
    margin-bottom: 1.5rem;
    display: inline-block;
  }

  .post-list {
    list-style: none;
    padding: 0;
  }

  .post-list li {
    margin-bottom: 0.8rem;
  }

  .post-list a {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    border-bottom: none; /* Override default link underline */
    padding: 0.5rem 0;
    transition: background-color 0.2s;
  }

  .post-list a:hover {
    background-color: rgba(0,0,0,0.03);
    border-bottom: none;
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-right: 1.5rem;
    flex-shrink: 0;
  }

  .post-title {
    font-weight: 500;
    color: var(--text-primary);
  }

  .more-link {
    margin-top: 2rem;
    text-align: right;
    font-family: var(--font-sans);
    font-size: 0.9rem;
  }
</style>
