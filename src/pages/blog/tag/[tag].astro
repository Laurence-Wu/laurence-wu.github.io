---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getUrl } from '../../../utils/url';

export async function getStaticPaths() {
  const allBlogPosts = await getCollection('blog');
  
  // Get all unique tags
  const allTags = [...new Set(allBlogPosts.flatMap(post => post.data.tags || []))];
  
  return allTags.map(tag => ({
    params: { tag },
    props: { 
      tag,
      posts: allBlogPosts.filter(post => post.data.tags?.includes(tag))
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    }
  }));
}

const { tag, posts } = Astro.props;
---

<BaseLayout title={`Posts tagged "${tag}"`} description={`Blog posts tagged with ${tag}`}>
  <div class="container">
    <header class="page-header">
      <nav class="breadcrumb">
        <a href={getUrl('/blog/')}>Writing</a>
        <span class="separator">/</span>
        <span class="current">#{tag}</span>
      </nav>
      <h1>{tag}</h1>
      <p class="subtitle">{posts.length} post{posts.length !== 1 ? 's' : ''}</p>
    </header>

    <div class="post-feed">
      {posts.length > 0 ? (
        posts.map(post => (
          <article class="post-preview">
            <header>
              <div class="post-meta-line">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
              </div>
              <h2>
                <a href={getUrl(`/blog/${post.slug}/`)}>{post.data.title}</a>
              </h2>
            </header>

            {post.data.description && (
              <p class="post-excerpt">{post.data.description}</p>
            )}

            <div class="post-tags-inline">
              {post.data.tags?.map(postTag => (
                <a href={getUrl(`/blog/tag/${postTag}/`)} class={`tag-link ${postTag === tag ? 'active' : ''}`}>
                  #{postTag}
                </a>
              ))}
            </div>
          </article>
        ))
      ) : (
        <div class="no-posts">
          <p>No posts found with this tag.</p>
        </div>
      )}
    </div>

    <div class="footer-link">
      <a href={getUrl('/blog/')}>‚Üê Back to all writing</a>
    </div>
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .breadcrumb {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
    border-bottom: none;
  }

  .breadcrumb a:hover {
    color: var(--accent);
  }

  .separator {
    margin: 0 0.5rem;
    color: var(--border-subtle);
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .subtitle {
    color: var(--text-secondary);
    font-family: var(--font-sans);
  }

  .post-feed {
    max-width: var(--max-width-text);
    margin: 0 auto 4rem;
  }

  .post-preview {
    margin-bottom: 3.5rem;
  }

  .post-meta-line {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .post-preview h2 {
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    font-size: 1.8rem;
    line-height: 1.3;
  }

  .post-preview h2 a {
    color: var(--text-primary);
    text-decoration: none;
    border-bottom: none;
  }

  .post-preview h2 a:hover {
    color: var(--accent);
  }

  .post-excerpt {
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .post-tags-inline {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
  }

  .tag-link {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-secondary);
    text-decoration: none;
    border-bottom: none;
  }

  .tag-link:hover, .tag-link.active {
    color: var(--accent);
  }

  .footer-link {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
  }

  .footer-link a {
    font-family: var(--font-sans);
    color: var(--text-secondary);
    text-decoration: none;
  }

  .footer-link a:hover {
    color: var(--accent);
  }
</style>
