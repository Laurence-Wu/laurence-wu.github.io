---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getUrl } from '../../utils/url';

const allBlogPosts = await getCollection('blog');
const publishedPosts = allBlogPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get all unique tags
const allTags = [...new Set(publishedPosts.flatMap(post => post.data.tags || []))];
---

<BaseLayout title="Writing - Xiaoyou Wu" description="Thoughts on technology and engineering.">
  <div class="container">
    <header class="page-header">
      <h1>Writing</h1>
    </header>

    <div class="blog-layout">
      {/* Sidebar with Categories */}
      <aside class="blog-sidebar">
        <h3>Categories</h3>
        <ul class="category-list">
          {allTags.map(tag => (
            <li>
              <a href={getUrl(`/blog/tag/${tag}/`)} class="category-link">#{tag}</a>
            </li>
          ))}
        </ul>
      </aside>

      {/* Main Post List */}
      <div class="post-feed">
        {publishedPosts.length > 0 ? (
          publishedPosts.map(post => (
            <article class="post-preview">
              <header>
                <div class="post-meta-line">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric'
                    })}
                  </time>
                  <span class="meta-separator">â€¢</span>
                  <div class="post-tags-inline">
                     {post.data.tags?.slice(0, 2).map(tag => (
                        <span>#{tag}</span>
                     ))}
                  </div>
                </div>
                <h2>
                  <a href={getUrl(`/blog/${post.slug}/`)}>{post.data.title}</a>
                </h2>
              </header>
              
              {post.data.description && (
                <p class="post-excerpt">{post.data.description}</p>
              )}
            </article>
          ))
        ) : (
          <p>No posts yet.</p>
        )}
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 4rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .blog-layout {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 4rem;
  }

  /* Sidebar */
  .blog-sidebar h3 {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .category-list {
    list-style: none;
    padding: 0;
  }

  .category-list li {
    margin-bottom: 0.8rem;
  }

  .category-link {
    color: var(--text-secondary);
    font-family: var(--font-sans);
    font-size: 0.9rem;
    text-decoration: none;
    transition: color 0.2s;
    border-bottom: none;
  }

  .category-link:hover {
    color: var(--accent);
  }

  /* Post Feed */
  .post-preview {
    margin-bottom: 3.5rem;
  }

  .post-meta-line {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .meta-separator {
    color: var(--border-subtle);
  }

  .post-tags-inline span {
    margin-right: 0.5rem;
    color: var(--text-secondary);
  }

  .post-preview h2 {
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    font-size: 1.8rem;
    line-height: 1.3;
  }

  .post-preview h2 a {
    color: var(--text-primary);
    text-decoration: none;
    border-bottom: none;
  }

  .post-preview h2 a:hover {
    color: var(--accent);
  }

  .post-excerpt {
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.7;
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .blog-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .blog-sidebar {
      order: 2; /* Move sidebar to bottom on mobile, or top if preferred */
      border-top: 1px solid var(--border-subtle);
      padding-top: 2rem;
    }
  }
</style>
