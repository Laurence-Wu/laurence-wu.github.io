---
// Profile Page - Preserved Legacy Frontend Design
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Profile - Xiaoyou Wu" description="Learn more about Xiaoyou Wu's background, education, and achievements in Computer Engineering at Georgia Tech.">
  <div class="profile">
    <div class="container">
      <h1>Profile</h1>
      <div class="profile-content">
        <div class="profile-text">
          <h2> Introduction</h2>
          <p>
            I'm a Computer Engineering student at Georgia Tech, passionate about the intersection of hardware and software. 
            My interests span machine learning, avionics systems, and web development.
          </p>
          
          <h3>Education</h3>
          <p>
            <strong>Georgia Institute of Technology</strong><br>
            Bachelor of Science in Computer Engineering<br>
            Expected Graduation: 2026
          </p>
          
          <h3>Technical Skills</h3>
          <div class="skills-grid">
            <div class="skill-category">
              <h4>Programming Languages</h4>
              <ul>
                <li>Java</li>
                <li>C/C++</li>
                <li>Python</li>
                <li>MATLAB</li>
                <li>JavaScript</li>
              </ul>
            </div>
            <div class="skill-category">
              <h4>Hardware & Design</h4>
              <ul>
                <li>Altrium / KiCad</li>
                <li>Embedded Systems</li>
                <li>SOLIDWORKS</li>
              </ul>
            </div>
            <div class="skill-category">
              <h4>Technologies</h4>
              <ul>
                <li>React</li>
                <li>MySQL</li>
                <li>Git</li>
              </ul>
            </div>
          </div>
          
          <h3>Research Interests</h3>
          <p>
            My research focuses on improving the efficiency of machine learning models with low level programming.
          </p>
        </div>
        
        <div class="resume-section">
          <h3>Resume</h3>
          <p>Download my complete resume to learn more about my experience and achievements.</p>
          <a href={`${import.meta.env.BASE_URL}resume.pdf`} class="resume-download" target="_blank" rel="noopener noreferrer">
            Download Resume (PDF)
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  /* Profile Page Styles - Preserved from Legacy Frontend */
  .profile {
    background-color: #F4E8D1;
    color: var(--color-text);
    font-family: var(--font-body);
    padding: var(--section-spacing) 0;
    position: relative;
    color: #F4E8D1;
  }

  .profile h1 {
    font-family: var(--font-heading);
    display: block;
    font-size: 3.5rem;
    margin-bottom: 2rem;
    font-weight: bold;
    text-align: center;
    color: var(--color-dark);
    position: relative;
    text-rendering: optimizeLegibility;
  }

  /* Elegant heading underline */
  .profile h1::after {
    background: linear-gradient(to right, var(--color-gold), var(--color-gold-light));
    bottom: -10px;
    content: '';
    height: 3px;
    left: 50%;
    position: absolute;
    transform: translateX(-50%);
    width: 80px;
  }

  .profile-content {
    background-color: var(--color-card-bg);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-soft);
    margin: 2rem auto;
    max-width: 900px;
    padding: var(--card-padding);
    position: relative;
    transition: var(--transition-standard);
  }

  .profile-content:hover {
    box-shadow: var(--shadow-medium);
  }

  /* Elegant side accent */
  .profile-content::before {
    background: linear-gradient(to bottom, var(--color-gold), var(--color-gold-light));
    content: '';
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 4px;
    border-radius: var(--border-radius-lg) 0 0 var(--border-radius-lg);
  }

  .profile h2 {
    color: var(--color-dark);
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    margin-bottom: 1.5rem;
    margin-top: 0;
    position: relative;
  }

  .profile h3 {
    color: var(--color-gold);
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    margin-top: 2rem;
    margin-bottom: 1rem;
    position: relative;
  }

  .profile h4 {
    color: var(--sage-green);
    font-family: var(--font-heading);
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 0.8rem;
    margin-top: 0;
  }

  .profile p {
    color: var(--color-text);
    font-family: var(--font-accent);
    font-size: 1.2rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    text-align: left;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .skill-category {
    background-color: var(--ivory);
    border-radius: var(--border-radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow-soft);
    transition: var(--transition-standard);
  }

  .skill-category:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-medium);
  }

  .skill-category ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .skill-category li {
    background-color: var(--sage-green);
    color: white;
    padding: 0.5rem 1rem;
    margin: 0.5rem 0;
    border-radius: 20px;
    font-family: var(--font-body);
    font-weight: 500;
    transition: var(--transition-standard);
  }

  .skill-category li:hover {
    background-color: var(--light-sage);
    transform: scale(1.05);
  }

  .resume-section {
    background-color: var(--sage-green);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    margin-top: 3rem;
    text-align: center;
    color: white;
  }

  .resume-section h3 {
    color: white;
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .resume-section p {
    color: white;
    margin-bottom: 1.5rem;
  }

  .resume-download {
    display: inline-block;
    background-color: var(--color-gold);
    color: var(--color-dark);
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: var(--transition-sophisticated);
    box-shadow: var(--shadow-soft);
  }

  .resume-download:hover {
    background-color: var(--color-gold-light);
    transform: translateY(-3px);
    box-shadow: var(--shadow-medium);
  }

  .resume-download::after {
    display: none; /* Remove the underline effect */
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .profile {
      padding: 2.5rem 0;
    }
    
    .profile h1 {
      font-size: 2.8rem;
    }
    
    .profile-content {
      padding: 2rem;
      margin: 1.5rem;
    }
    
    .skills-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .profile {
      padding: 2rem 0;
    }
    
    .profile h1 {
      font-size: 2.4rem;
    }
    
    .profile h2 {
      font-size: 2rem;
    }
    
    .profile h3 {
      font-size: 1.6rem;
    }
    
    .profile p {
      font-size: 1.1rem;
    }
    
    .profile-content {
      padding: 1.8rem;
      margin: 1rem;
    }
  }
</style> 