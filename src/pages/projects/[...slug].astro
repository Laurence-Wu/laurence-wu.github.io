    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 10% 20%, rgba(138, 154, 126, 0.05) 0%, transparent 50%),
      radial-gradient(circle at 90% 80%, rgba(212, 175, 55, 0.08) 0%, transparent 50%);
    pointer-events: none;
  }
  
  /* Adjust layout for TOC on larger screens */
  @media (min-width: 1201px) {
    .project-content {
      margin-left: 320px;
      margin-right: auto;
    }
    
    .project-footer .container {
      margin-left: 320px;
      margin-right: auto;
    }
  }
  
