    font-size: 2rem;
    border-bottom: 2px solid rgba(138, 154, 126, 0.3);
    padding-bottom: 0.5rem;
  }
  
  .project-content :global(h3) {
    font-size: 1.5rem;
    color: #39647c;
  }
  
  .project-content :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: #4A5568;
    font-size: 1.05rem;
    position: relative;
    z-index: 2;
  }
  
  .project-content :global(img) {
    margin: 3rem 0;
    border-radius: 15px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    z-index: 2;
  }
  
  .project-content :global(img:hover) {
    transform: scale(1.02);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
  }
  
  .project-footer {
    background: linear-gradient(135deg, #2E3A59 0%, #39647c 100%);
    padding: 3rem 0;
    border-top: 3px solid #8A9A7E;
    position: relative;
  }
  
  .project-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 30% 70%, rgba(244, 232, 209, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }
  
  .back-link {
    color: #F4E8D1;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    transition: all 0.3s ease;
    position: relative;
    z-index: 2;
    padding: 1rem 2rem;
    border-radius: 12px;
    background: rgba(244, 232, 209, 0.1);
    border: 2px solid rgba(244, 232, 209, 0.3);
  }
  
  .back-link:hover {
    color: white;
    background: rgba(244, 232, 209, 0.2);
    border-color: #F4E8D1;
    transform: translateX(-5px);
  }
  
  .back-link::before {
    content: '‚Üê';
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }
  
  .back-link:hover::before {
    transform: translateX(-3px);
  }
  
  @media (max-width: 768px) {
    .project-header h1 {
      font-size: 2rem;
    }
    
    .project-description {
      font-size: 1.1rem;
    }
    
    .project-meta {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .project-links {
      width: 100%;
      justify-content: center;
    }
