<div class="search-container">
  <div class="search-input-wrapper">
    <input 
      type="text" 
      id="search-input" 
      placeholder="Search blogs & projects..." 
      autocomplete="off"
    />
    <button id="search-icon" class="search-icon" type="button" aria-label="Search">
