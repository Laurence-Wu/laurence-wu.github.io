---
// Navigation.astro - Preserved Legacy Frontend Styling
import { getUrl, isActive } from '../utils/url';

export interface Props {
  currentPath?: string;
}

const { currentPath = Astro.url.pathname } = Astro.props;
---

<nav class="navbar">
  <div class="navbar-brand">Xiaoyou Wu</div>
  
  <a href={getUrl('/')} class={`navbar-link ${isActive('/', currentPath) ? 'active' : ''}`}>
    Home
  </a>
  
  <a href={getUrl('/blog')} class={`navbar-link ${isActive('/blog', currentPath) ? 'active' : ''}`}>
    Blog
  </a>
  
  <a href={getUrl('/projects')} class={`navbar-link ${isActive('/projects', currentPath) ? 'active' : ''}`}>
    Projects
  </a>

</nav>

<style>
  /* Compact Floating Navbar - Modernized for floating design */
.navbar {
    font-family: var(--font-body);
    background: rgba(240, 240, 240, 0.95); /* Very light grey, semi-transparent */
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    overflow: hidden;
    display: flex;
    justify-content: space-around;
    text-align: center;
    align-items: center;
    padding: 8px 0;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08), 0 1px 4px rgba(0, 0, 0, 0.05);
    height: 60px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 1000;
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    pointer-events: auto;
    -webkit-user-drag: none;
    -khtml-user-drag: none;
    -moz-user-drag: none;
    -o-user-drag: none;
    user-drag: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .navbar-brand {
    font-family: var(--font-heading);
    font-size: 18px;
    color: var(--deep-navy); /* Prussian Blue */
    text-transform: uppercase;
    font-weight: 700;
    padding: 0 20px;
    white-space: nowrap;
  }

  .navbar-link {
    color: var(--deep-navy); /* Prussian Blue */
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 14px;
    letter-spacing: 0.8px;
    text-transform: uppercase;
    font-weight: 700;
    padding: 8px 16px;
    border-bottom: 2px solid transparent;
    border-radius: 6px;
    position: relative;
    white-space: nowrap;
    -webkit-user-drag: none;
    user-drag: none;
  }

  .navbar-link:hover,
  .navbar-link.active {
    color: var(--gold-accent); /* Muted Gold */
    border-bottom: 2px solid var(--gold-accent);
    transform: translateY(-1px);
    background-color: rgba(169, 135, 67, 0.1); /* Light transparent gold background */
    backdrop-filter: blur(5px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .navbar.scrolled {
    background: rgba(248, 247, 244, 0.98); /* Off-white background on scroll */
    backdrop-filter: blur(25px);
    box-shadow: 0 4px 25px rgba(0, 0, 0, 0.1), 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  /* Enhanced Responsive design for mobile flexibility */
  @media (max-width: 768px) {
    .navbar {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 1fr);
      gap: 4px; /* Reduced gap */
      height: auto;
      min-height: 50px; /* Minimum height for mobile */
      padding: 8px 6px; /* Reduced padding */
      justify-items: center;
      align-items: center;
    }
    
    .navbar-brand {
      display: none;
    }
    
    .navbar-link {
      margin: 0;
      padding: 8px 6px; /* Reduced padding */
      width: 100%;
      text-align: center;
      border-radius: 4px;
      font-size: 13px; /* Slightly smaller on mobile */
      transition: all 0.3s ease;
    }
  }

  @media (max-width: 480px) {
    .navbar {
      padding: 6px 4px; /* Further reduced padding */
      gap: 3px;
      min-height: 45px;
    }
    
    .navbar-link {
      font-size: 12px; /* Smaller font on small screens */
      padding: 6px 4px;
      letter-spacing: 0.5px;
    }
  }

  @media (max-width: 360px) {
    .navbar {
      padding: 5px 3px;
      gap: 2px;
      min-height: 40px;
    }
    
    .navbar-link {
      font-size: 11px;
      padding: 5px 3px;
      letter-spacing: 0.3px;
    }
  }

  @media (max-width: 320px) {
    .navbar {
      padding: 4px 2px;
      gap: 2px;
      min-height: 38px;
    }
    
    .navbar-link {
      font-size: 10px;
      padding: 4px 2px;
      letter-spacing: 0.2px;
    }
  }

  /* Smooth scrolling for the whole document */
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  // Add scroll effect to navbar
  function handleNavbarScroll() {
    const navbar = document.querySelector('.navbar');
    if (window.scrollY > 50) {
      navbar?.classList.add('scrolled');
    } else {
      navbar?.classList.remove('scrolled');
    }
  }

  // Add event listener for scroll
  window.addEventListener('scroll', handleNavbarScroll);
  
  // Prevent context menu on navbar to enhance undraggable experience
  document.querySelector('.navbar')?.addEventListener('contextmenu', (e) => {
    e.preventDefault();
  });
  
  // Prevent drag start on all navbar elements
  document.querySelector('.navbar')?.addEventListener('dragstart', (e) => {
    e.preventDefault();
  });
</script> 