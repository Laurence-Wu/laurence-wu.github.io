---
// Navigation.astro - Simple Book Theme
import { getUrl, isActive } from '../utils/url';

export interface Props {
  currentPath?: string;
}

const { currentPath = Astro.url.pathname } = Astro.props;
---

<nav class="site-nav">
  <div class="nav-container">
    <a href={getUrl('/')} class="site-title">Xiaoyou Wu</a>

    <div class="nav-links">
      <a href={getUrl('/blog')} class={`nav-link ${isActive('/blog', currentPath) ? 'active' : ''}`}>
        Writing
      </a>

      <a href={getUrl('/projects')} class={`nav-link ${isActive('/projects', currentPath) ? 'active' : ''}`}>
        Projects
      </a>

      <a href={getUrl('/about')} class={`nav-link ${isActive('/about', currentPath) ? 'active' : ''}`}>
        About
      </a>
    </div>
  </div>
</nav>

<style>
  .site-nav {
    padding: 2.5rem 0;
    border-bottom: 1px solid var(--border-subtle);
    background-color: var(--bg-paper);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: var(--max-width-layout);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .site-title {
    font-family: var(--font-sans);
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--text-primary);
    text-decoration: none;
    letter-spacing: -0.02em;
    border-bottom: none;
  }

  .site-title:hover {
    color: var(--text-primary);
    border-bottom: none;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: var(--text-secondary);
    font-family: var(--font-sans);
    font-size: 0.95rem;
    text-decoration: none;
    transition: color 0.2s;
    border-bottom: none;
  }

  .nav-link:hover, .nav-link.active {
    color: var(--accent);
  }
</style>
