---
import BaseLayout from './BaseLayout.astro';
import { formatDate } from '../utils/date';

export interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  updatedDate?: Date;
  author?: string;
  image?: string;
  tags?: string[];
  frontPicture?: string | null;
}

const { title, description, pubDate, updatedDate, author = 'Laurence', image, tags = [], frontPicture } = Astro.props;
---

<BaseLayout title={title} description={description} image={image}>
  <div class="container">
    <article class="blog-post">
      <header class="post-header">
        <h1>{title}</h1>
        <div class="post-meta">
          <time datetime={pubDate.toISOString()}>
            {formatDate(pubDate)}
          </time>
          {author && <span class="author"> • {author}</span>}
          {updatedDate && (
            <span class="updated">
              (Updated: <time datetime={updatedDate.toISOString()}>
                {formatDate(updatedDate)}
              </time>)
            </span>
          )}
        </div>
        {tags.length > 0 && (
          <div class="tags">
            {tags.map(tag => (
              <a href={`/blog/tag/${tag}/`} class="tag">#{tag}</a>
            ))}
          </div>
        )}
      </header>

      {/* Optional: Front Picture if strictly needed, but kept simple */}
      {frontPicture && (
        <div class="post-hero-image">
          <img src={frontPicture} alt={title} />
        </div>
      )}

      <div class="post-content">
        <slot />
      </div>
    </article>

    <div class="post-footer">
      <a href="/blog" class="back-link">← Back to Blog</a>
    </div>
  </div>
</BaseLayout>

<style>
  .post-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-subtle);
  }

  .post-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .post-meta {
    color: var(--text-secondary);
    font-size: 0.95rem;
    font-family: var(--font-sans);
  }

  .tags {
    margin-top: 1rem;
    display: flex;
    justify-content: center;
    gap: 0.8rem;
  }

  .tag {
    color: var(--accent);
    font-size: 0.9rem;
    font-family: var(--font-sans);
    text-decoration: none;
  }

  .tag:hover {
    text-decoration: underline;
  }

  .post-content {
    max-width: var(--max-width-text);
    margin: 0 auto;
    font-size: 1.1rem;
  }

  .post-hero-image img {
    max-height: 400px;
    object-fit: cover;
    width: 100%;
    margin-bottom: 3rem;
  }

  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
    text-align: center;
  }

  .back-link {
    font-family: var(--font-sans);
    color: var(--text-secondary);
  }

  .back-link:hover {
    color: var(--accent);
  }
</style>
